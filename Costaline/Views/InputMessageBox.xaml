<Window x:Class="Costaline.InputMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Costaline"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="InputMessageBox" Height="165.334" Width="350" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Margin="10,10,4,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlock" Margin="10,10,10,0" TextWrapping="Wrap" Text="TextBlock" Height="17" VerticalAlignment="Top"/>
        <Button x:Name="buttonYes" Content="Да"  HorizontalAlignment="Left" Margin="10,0,0,6" IsDefault="True" Width="149" Background="#FF31BD2A" Click="buttonYes_Click" Height="27" VerticalAlignment="Bottom"/>
        <Button x:Name="buttonNo" Content="НЕТ" Margin="0,0,10,6" IsCancel="True" Background="#FFFB0000" Click="buttonNo_Click" HorizontalAlignment="Right" Width="150" Height="27" VerticalAlignment="Bottom"/>
        <ComboBox x:Name="comboBox" Margin="10,41,10,0" VerticalAlignment="Top" IsEditable="True" />

    </Grid>
</Window>
