<Window x:Class="Costaline.InputMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Costaline"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="InputMessageBox" Height="170" Width="350" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Margin="10,10,4,6">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlock" Margin="10,10,10,87" TextWrapping="Wrap" Text="TextBlock" Grid.RowSpan="2"/>
        <TextBox x:Name="textBox"  Margin="10,37,10,0" TextWrapping="Wrap" Height="29" VerticalAlignment="Top" ToolTip="Введите сюда новое имя"/>
        <Button x:Name="buttonYes" Content="Да"  HorizontalAlignment="Left" Margin="18,83,0,0" VerticalAlignment="Top" IsDefault="True" Width="140" Background="#FF31BD2A" Click="buttonYes_Click"/>
        <Button x:Name="buttonNo" Content="НЕТ" HorizontalAlignment="Left" Margin="168,83,0,0" VerticalAlignment="Top" IsCancel="True" Width="140" Background="#FFFB0000" Click="buttonNo_Click"/>

    </Grid>
</Window>
