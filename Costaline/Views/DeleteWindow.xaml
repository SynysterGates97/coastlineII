<Window x:Class="Costaline.DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Costaline"
        mc:Ignorable="d"
        Title="DeleteWindow" Height="170" Width="350" WindowStyle="ToolWindow">
    <Grid Margin="10,10,4,6">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlock" Margin="10,10,10,46" TextWrapping="Wrap" Text="Удалить ?"/>
        <Button x:Name="buttonYes" Content="Да" HorizontalAlignment="Left" Margin="18,83,0,0" VerticalAlignment="Top" Width="140" Background="#FF31BD2A" Click="buttonYes_Click"/>
        <Button x:Name="buttonNo" Content="НЕТ" HorizontalAlignment="Left" Margin="168,83,0,0" VerticalAlignment="Top" Width="140" Background="#FFFB0000" Click="buttonNo_Click"/>

    </Grid>
</Window>
